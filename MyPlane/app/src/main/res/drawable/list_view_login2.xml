<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#55aaaaaa" android:endColor="#55aaaaaa" android:centerColor="#55aaaaaa" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <gradient android:startColor="#00ffffff" android:endColor="#22ffffff" android:centerColor="#22ffffff" />
        </shape>
    </item>
</selector>